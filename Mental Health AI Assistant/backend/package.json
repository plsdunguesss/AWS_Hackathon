{
  "name": "mental-health-assistant-backend",
  "version": "1.0.0",
  "description": "Backend server for Mental Health AI Assistant",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/database && cp src/database/schema.sql dist/database/schema.sql",
    "build:win": "tsc && npm run copy-assets:win",
    "copy-assets:win": "if not exist dist\\database mkdir dist\\database && copy src\\database\\schema.sql dist\\database\\schema.sql",
    "start": "node dist/server.js",
    "test": "jest",
    "verify": "node verify-setup.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
